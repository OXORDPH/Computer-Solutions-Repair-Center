<odoo>
    <template id="custom_login_layout" inherit_id="web.login_layout">
        <xpath expr="//img[@class='logo']" position="replace">
            <img src="/custom_logo/static/img/oxord-icon-512x512.png" class="logo" width="200px"/>
        </xpath>
    </template>
</odoo>
<odoo>
    <template id="assets_backend" inherit_id="web.assets_backend" name="Custom Favicon">
        <xpath expr="//link[@rel='shortcut icon']" position="replace">
            <link rel="shortcut icon" type="image/png" href="/custom_logo/static/img/favicon.png"/>
        </xpath>
    </template>
</odoo>